<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FAFAF9"
    android:padding="4dp">

    <!-- Preview Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/preview_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type a message..."
            android:textColor="#78716C"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:indeterminateTint="#7C3AED" />

        <Button
            android:id="@+id/enhance_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="âœ¨"
            android:textSize="18sp"
            android:backgroundTint="#7C3AED"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Keyboard Rows -->
    <LinearLayout
        android:id="@+id/keyboard_row_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/keyboard_row_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="16dp" />

    <LinearLayout
        android:id="@+id/keyboard_row_3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/keyboard_row_4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

</LinearLayout>
